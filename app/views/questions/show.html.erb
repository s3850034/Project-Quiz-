<div class="center jumbotron">
<p>Question: <%= @present_question.question %> </p>
<p>
    <%= form_with url: quizzes_next_url(quiz_id: params[:quiz_id]) do |f| %>
        <% @answers.each do |a|%>
            <% if a.answer != nil %>        
                <p><%=f.radio_button :user_answer, a.id, required: true%>
                <%=f.label :user_answer, a.answer%></p>
            <% end %>
        <% end %>
        <%=f.submit "Submit" %>
    <% end %>
</p>
</div>